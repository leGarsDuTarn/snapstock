<div class="mb-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Enseignes", brands_path, class: "text-decoration-none" %></li>
      <li class="breadcrumb-item active"><%= @brand.name %></li>
    </ol>
  </nav>

  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <div class="bg-primary text-white rounded-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
        <i class="fa-solid fa-building fs-3"></i>
      </div>
      <div>
        <h1 class="h2 fw-800 mb-0"><%= @brand.name %></h1>
        <p class="text-muted mb-0">Configuration et segmentation</p>
      </div>
    </div>

    <div>
      <%= link_to edit_brand_path(@brand), class: "btn btn-outline-secondary btn-sm" do %>
        <i class="fa-solid fa-pen me-1"></i> Modifier le nom
      <% end %>
    </div>
  </div>
</div>

<div class="row g-4">

  <%# --- COLONNE GAUCHE : LES STRATES (STRATA) --- %>
  <div class="col-lg-8">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom">
        <h5 class="fw-bold mb-0 text-primary">
          <i class="fa-solid fa-layer-group me-2"></i>Strates de l'enseigne
        </h5>

        <%# BOUTON AJOUTER FONCTIONNEL %>
        <%= link_to new_brand_stratum_path(@brand), class: "btn btn-sm btn-primary fw-bold rounded-pill px-3" do %>
          <i class="fa-solid fa-plus me-1"></i> Ajouter une Strate
        <% end %>
      </div>

      <div class="list-group list-group-flush">
        <% if @brand.strata.any? %>
          <% @brand.strata.order(rank: :asc).each do |stratum| %>
            <div class="list-group-item p-3 d-flex justify-content-between align-items-center hover-bg-light">
              <div class="d-flex align-items-center">
                <%# Badge du rang %>
                <div class="badge bg-light text-primary border me-3 flex-shrink-0 d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                  <%= stratum.rank %>
                </div>
                <div>
                  <span class="fw-bold text-dark"><%= stratum.name %></span>
                  <div class="small text-muted">Niveau de segmentation</div>
                </div>
              </div>

              <div class="d-flex gap-2">
                 <%# BOUTON EDITER (Shallow: pas besoin de @brand) %>
                 <%= link_to edit_stratum_path(stratum), class: "btn btn-sm btn-light border", title: "Modifier" do %>
                   <i class="fa-solid fa-pen text-secondary"></i>
                 <% end %>

                 <%# BOUTON SUPPRIMER (Shallow: pas besoin de @brand) %>
                 <%= button_to stratum_path(stratum), method: :delete, class: "btn btn-sm btn-light border text-danger", form_class: "d-inline", title: "Supprimer", data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer la strate #{stratum.name} ?" } do %>
                   <i class="fa-solid fa-trash"></i>
                 <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <%# --- ETAT VIDE --- %>
          <div class="text-center py-5">
            <div class="mb-3">
              <i class="fa-solid fa-layer-group text-muted opacity-25" style="font-size: 3.5rem;"></i>
            </div>
            <h5 class="text-muted">Aucune strate définie</h5>
            <p class="text-muted small">Les strates permettent de segmenter l'assortiment de vos magasins (ex: H1, H2...).</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%# --- COLONNE DROITE : INFOS COMPLEMENTAIRES --- %>
  <div class="col-lg-4">
    <div class="card shadow-sm border-0 bg-light h-100">
      <div class="card-body">
        <h6 class="fw-bold text-uppercase text-muted small mb-4">Informations clés</h6>

        <div class="d-flex flex-column gap-3">
          <div class="bg-white p-3 rounded shadow-sm d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <i class="fa-solid fa-store text-primary me-2"></i>
              <span>Magasins</span>
            </div>
            <span class="fw-bold fs-5"><%= @brand.stores.count %></span>
          </div>

          <div class="bg-white p-3 rounded shadow-sm d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <i class="fa-solid fa-layer-group text-info me-2"></i>
              <span>Strates</span>
            </div>
            <span class="fw-bold fs-5"><%= @brand.strata.count %></span>
          </div>

          <div class="mt-2 border-top pt-3">
            <p class="small text-muted mb-1">Date de création</p>
            <p class="small fw-bold"><i class="fa-solid fa-calendar-day me-1"></i> <%= l @brand.created_at, format: :long rescue @brand.created_at %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
