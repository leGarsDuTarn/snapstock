<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-lg border-0 rounded-4 text-dark">
      <div class="card-body p-5">

        <div class="text-center mb-5">
          <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow" style="width: 64px; height: 64px;">
            <i class="fa-solid fa-layer-group fa-2x"></i>
          </div>
          <h2 class="fw-bold h3">SnapStock</h2>
          <p class="text-muted small">Connectez-vous pour commencer</p>
        </div>

        <%# Formulaire configuré pour les params à plat de Rails 8 %>
        <%= simple_form_for :session, url: session_path do |f| %>

          <%= f.input :email_address,
                      label: "Email",
                      placeholder: "nom@exemple.com",
                      input_html: { name: "email_address", class: "form-control-lg bg-light border-0", value: params[:email_address] },
                      label_html: { class: "fw-semibold" } %>

          <div class="mt-4">
            <div class="d-flex justify-content-between align-items-center mb-1">
              <label class="fw-semibold mb-0">Mot de passe</label>
              <%= link_to "Oublié ?", new_password_path, class: "small text-decoration-none" %>
            </div>
            <%= f.input :password,
                        label: false,
                        input_html: { name: "password", class: "form-control-lg bg-light border-0" } %>
          </div>

          <div class="d-grid gap-2 mt-5">
            <%= f.button :submit, "Se connecter", class: "btn-primary btn-lg shadow-sm fw-bold mb-2" %>

            <%# Lien vers la création de compte %>
            <%= link_to "Créer un compte", new_registration_path, class: "btn btn-outline-secondary border-0 btn-sm text-decoration-none" %>
          </div>
        <% end %>

      </div>
    </div>

    <div class="text-center mt-4">
      <p class="text-muted small">SnapStock v8.2 &copy; <%= Time.current.year %></p>
    </div>
  </div>
</div>
