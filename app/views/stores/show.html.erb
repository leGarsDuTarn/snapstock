<%# Navigation / Retour %>
<div class="mb-4">
  <%= link_to stores_path, class: "text-decoration-none text-muted small" do %>
    <i class="fa-solid fa-arrow-left me-1"></i> Retour à la liste
  <% end %>
</div>

<div class="row g-4">

  <div class="col-lg-4">
    <div class="card border-0 shadow-sm sticky-top" style="top: 20px; z-index: 10;">
      <div class="card-body p-4 text-center">

        <%# Logo/Initiale de l'enseigne %>
        <div class="bg-primary-subtle text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow-sm" style="width: 80px; height: 80px;">
          <span class="fw-bold h3 mb-0"><%= @store.brand.name[0..1].upcase %></span>
        </div>

        <%# Infos Identité regroupées %>
        <h1 class="h3 fw-bold mb-1"><%= @store.name %></h1>
        <div class="text-primary fw-bold small mb-2"><%= @store.brand.name %></div>

        <%# Adresse remontée ici %>
        <p class="text-muted small mb-4">
          <i class="fa-solid fa-location-dot me-1"></i>
          <%= @store.address %><br>
          <%= @store.zip_code %> <%= @store.city %>
        </p>

        <hr class="my-4 opacity-25">

        <%# ACTIONS PRINCIPALES %>
        <div class="d-grid gap-2 mb-3">
          <%= link_to new_store_inventory_report_path(@store), class: "btn btn-primary btn-lg shadow-sm fw-bold py-3" do %>
            <i class="fa-solid fa-play me-2"></i> Lancer un Relevé
          <% end %>
        </div>

        <%# ACTIONS SECONDAIRES %>
        <div class="row g-2">
          <div class="col-6">
            <%= link_to edit_store_path(@store), class: "btn btn-outline-secondary btn-sm w-100" do %>
              <i class="fa-solid fa-pen me-1"></i> Modifier
            <% end %>
          </div>
          <div class="col-6">
            <%= button_to store_path(@store),
                          method: :delete,
                          form: { data: { turbo_confirm: "Confirmer la suppression ?" } },
                          class: "btn btn-outline-danger btn-sm w-100" do %>
              <i class="fa-solid fa-trash me-1"></i> Supprimer
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="col-lg-8">

    <%# 1. CARTE NOTE STRATÉGIQUE %>
    <% if @store.personal_note.present? %>
      <div class="card border-0 shadow-sm mb-4 border-start border-warning border-4">
        <div class="card-header bg-white border-0 pt-4 px-4">
          <h5 class="fw-bold mb-0 text-dark">
            <i class="fa-solid fa-sticky-note text-warning me-2"></i>Note
          </h5>
        </div>
        <div class="card-body px-4 pb-4">
          <div class="text-dark fst-italic text-break overflow-y-auto pe-2" style="max-height: 200px;">
            <%= simple_format @store.personal_note %>
          </div>
        </div>
      </div>
    <% end %>

    <%# 2. CARTE PERSONNEL %>
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
        <h5 class="fw-bold mb-0">Équipe (<%= @managers.count + @employees.count %>)</h5>
        <%= link_to "#", class: "btn btn-sm btn-light text-primary fw-bold" do %>
          <i class="fa-solid fa-plus me-1"></i> Ajouter
        <% end %>
      </div>
      <div class="card-body px-4">
        <% if (@managers + @employees).empty? %>
          <div class="text-center py-4">
            <p class="text-muted small fst-italic mb-0">Aucun contact enregistré.</p>
          </div>
        <% else %>
          <div class="list-group list-group-flush">
            <% @managers.each do |manager| %>
              <div class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center border-light">
                <div class="d-flex align-items-center">
                  <div class="bg-info-subtle text-info rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                    <i class="fa-solid fa-user-tie"></i>
                  </div>
                  <div>
                    <div class="fw-bold text-dark"><%= manager.firstname %> <%= manager.lastname %></div>
                    <div class="small text-muted"><%= manager.phone %></div>
                  </div>
                </div>
                <span class="badge bg-info-subtle text-info-emphasis rounded-pill">Manager</span>
              </div>
            <% end %>
            <% @employees.each do |employee| %>
              <div class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center border-light">
                <div class="d-flex align-items-center">
                   <div class="bg-secondary-subtle text-secondary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                    <i class="fa-solid fa-user"></i>
                  </div>
                  <div>
                    <div class="fw-bold text-dark"><%= employee.firstname %> <%= employee.lastname %></div>
                    <div class="small text-muted"><%= employee.role %></div>
                  </div>
                </div>
                <span class="badge bg-light text-secondary rounded-pill">Employé</span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <%# 3. CARTE HISTORIQUE (Avec Stretched Link) %>
    <div class="card border-0 shadow-sm mb-5">
      <div class="card-header bg-white border-0 pt-4 px-4">
        <h5 class="fw-bold mb-0">Derniers Relevés</h5>
      </div>
      <div class="card-body px-4">
        <% if @recent_reports.any? %>
          <div class="list-group list-group-flush">
            <% @recent_reports.each do |report| %>

              <%# ⚠️ IMPORTANT : position-relative ici permet au lien stretched de fonctionner %>
              <div class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center position-relative border-bottom border-light">
                <div>
                  <div class="fw-bold text-dark">
                    <%# Le lien invisible qui couvre tout le bloc %>
                    <%= link_to inventory_report_path(report), class: "text-decoration-none text-dark stretched-link" do %>
                      Visite du <%= l report.report_date, format: :long %>
                    <% end %>
                  </div>

                  <%# Calcul des ruptures pour l'affichage conditionnel %>
                  <% rupture_count = report.inventory_items.where(is_out_of_stock: true).count %>

                  <% if rupture_count > 0 %>
                    <div class="small text-danger fw-bold">
                      <i class="fa-solid fa-triangle-exclamation me-1"></i>
                      <%= rupture_count %> ruptures signalées
                    </div>
                  <% else %>
                    <div class="small text-success">
                      <i class="fa-solid fa-check-circle me-1"></i>
                      Aucune rupture (RAS)
                    </div>
                  <% end %>
                </div>

                <i class="fa-solid fa-chevron-right text-muted opacity-50"></i>
              </div>

            <% end %>
          </div>
        <% else %>
          <div class="text-center py-4">
            <p class="text-muted small fst-italic mb-0">Aucun historique disponible.</p>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
