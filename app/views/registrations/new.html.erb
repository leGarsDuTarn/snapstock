<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-5">

        <div class="text-center mb-5">
          <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow" style="width: 64px; height: 64px;">
            <i class="fa-solid fa-user-plus fa-2x"></i>
          </div>
          <h2 class="fw-bold h3">Inscription</h2>
          <p class="text-muted small">Créez votre compte SnapStock</p>
        </div>

        <%= simple_form_for @user, url: registrations_path do |f| %>

          <%= f.input :email_address,
                      label: "Adresse Email",
                      placeholder: "nom@exemple.com",
                      input_html: { class: "form-control-lg bg-light border-0" },
                      label_html: { class: "fw-semibold" } %>

          <div class="mt-3">
            <%= f.input :password,
                        label: "Mot de passe",
                        input_html: { class: "form-control-lg bg-light border-0" },
                        label_html: { class: "fw-semibold" } %>
          </div>

          <div class="mt-3">
            <%= f.input :password_confirmation,
                        label: "Confirmation",
                        input_html: { class: "form-control-lg bg-light border-0" },
                        label_html: { class: "fw-semibold" } %>
          </div>

          <div class="d-grid gap-2 mt-5">
            <%= f.button :submit, "Créer mon compte", class: "btn-success btn-lg shadow-sm fw-bold" %>
          </div>
        <% end %>

      </div>
    </div>
    <div class="text-center mt-3">
      <%= link_to "Déjà un compte ? Connectez-vous", new_session_path, class: "text-decoration-none small" %>
    </div>
  </div>
</div>
