<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 fw-bold mb-0">Mes Rayons</h1>
  <%= link_to "Nouveau Rayon", new_category_path, class: "btn btn-primary" %>
</div>

<div class="card border-0 shadow-sm">
  <div class="list-group list-group-flush">
    <% @categories.each do |category| %>
      <div class="list-group-item d-flex justify-content-between align-items-center py-3">
        <span class="fw-bold"><%= category.name %></span>
        <div class="text-muted small">
          <%= category.products.count %> produits
          <%= link_to category_path(category), data: { turbo_method: :delete, turbo_confirm: "Supprimer ?" }, class: "text-danger ms-3" do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
