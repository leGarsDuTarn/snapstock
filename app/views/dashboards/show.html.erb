<div class="row mb-4 align-items-center">
  <div class="col">
    <h1 class="h3 fw-bold mb-0">Tableau de bord</h1>
    <p class="text-muted small">Connecté en tant que <%= Current.user.email_address %></p>
  </div>
  <div class="col-auto">
    <div class="bg-white p-2 rounded shadow-sm">
      <i class="fa-solid fa-calendar text-primary me-2"></i>
      <span class="fw-bold"><%= l Date.today, format: "%d %B %Y" %></span>
    </div>
  </div>
</div>

<div class="row g-3 mb-4">
  <div class="col-6 col-md-3">
    <div class="card border-0 shadow-sm text-center p-3">
      <div class="text-primary mb-1"><i class="fa-solid fa-shop fa-xl"></i></div>
      <div class="h5 fw-bold mb-0"><%= @stores_count %></div>
      <div class="text-muted x-small">Magasins</div>
    </div>
  </div>
  <div class="col-6 col-md-3">
    <div class="card border-0 shadow-sm text-center p-3">
      <div class="text-success mb-1"><i class="fa-solid fa-barcode fa-xl"></i></div>
      <div class="h5 fw-bold mb-0"><%= @products_count %></div>
      <div class="text-muted x-small">Produits</div>
    </div>
  </div>
</div>

<div class="row g-3 mb-5">
  <div class="col-md-6">
    <%= link_to stores_path, class: "card border-0 shadow-sm text-decoration-none p-4 h-100 bg-white hover-card" do %>
      <div class="d-flex align-items-center">
        <div class="bg-primary-subtle text-primary rounded-circle p-3 me-3">
          <i class="fa-solid fa-location-dot fa-xl"></i>
        </div>
        <div>
          <h3 class="h6 fw-bold mb-1 text-dark">Mes Magasins</h3>
          <p class="small text-muted mb-0">Gérer le parc et les contacts</p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= link_to "#", class: "card border-0 shadow-sm text-decoration-none p-4 h-100 bg-white hover-card" do %>
      <div class="d-flex align-items-center">
        <div class="bg-warning-subtle text-warning rounded-circle p-3 me-3">
          <i class="fa-solid fa-clipboard-check fa-xl"></i>
        </div>
        <div>
          <h3 class="h6 fw-bold mb-1 text-dark">Nouveau Relevé</h3>
          <p class="small text-muted mb-0">Saisie rapide sur le terrain</p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if @my_recent_reports.any? %>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h5 fw-bold mb-0 text-secondary">Derniers rapports</h2>
    <%= link_to "Tout voir", "#", class: "small text-decoration-none" %>
  </div>
  <div class="card border-0 shadow-sm overflow-hidden">
    <div class="list-group list-group-flush">
      <% @my_recent_reports.each do |report| %>
        <%= link_to inventory_report_path(report), class: "list-group-item list-group-item-action d-flex align-items-center py-3" do %>
          <div class="bg-light rounded p-2 me-3 text-center" style="width: 50px;">
             <span class="d-block fw-bold small"><%= report.report_date.day %></span>
             <span class="d-block x-small text-uppercase"><%= l report.report_date, format: "%b" %></span>
          </div>
          <div class="flex-grow-1">
            <div class="fw-bold text-dark"><%= report.store.city %></div>
            <div class="small text-muted"><%= report.store.brand.name %></div>
          </div>
          <i class="fa-solid fa-chevron-right text-light"></i>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
