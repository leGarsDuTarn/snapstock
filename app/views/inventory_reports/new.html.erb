<div class="container-fluid py-3 mb-5 pb-5" data-controller="inventory-handler">
  <%# En-tête léger %>
  <div class="mb-4 px-2">
    <h1 class="h4 fw-bold mb-0 text-dark">Nouveau Relevé</h1>
    <div class="text-muted small">
      <i class="fa-solid fa-shop me-1"></i><%= @store.name %>
      <span class="badge bg-dark ms-2"><%= @store.stratum&.name %></span>
    </div>
  </div>

  <%= simple_form_for [@store, @inventory_report], html: { id: "new_inventory_report" } do |f| %>
    <%= f.hidden_field :report_date %>

    <%# Groupement par catégorie %>
    <% groups = @inventory_report.inventory_items.group_by { |i| i.product.category&.name || "Autres" } %>

    <div class="accordion mb-5" id="categoriesAccordion">
      <% groups.each_with_index do |(category_name, items), index| %>
        <div class="accordion-item border-0 shadow-sm mb-3">
          <h2 class="accordion-header">
            <button class="accordion-button bg-dark text-white fw-bold py-2 <%= 'collapsed' unless index == 0 %>"
                    type="button" data-bs-toggle="collapse" data-bs-target="#cat-<%= index %>">
              <span class="text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;"><%= category_name %></span>
            </button>
          </h2>

          <div id="cat-<%= index %>" class="accordion-collapse collapse <%= 'show' if index == 0 %>">
            <div class="accordion-body p-0">

              <%# Titres des colonnes optimisés %>
              <div class="d-flex bg-light text-muted fw-bold p-2 border-bottom" style="font-size: 0.6rem;">
                <div style="width: 35%;">PRODUIT</div>
                <div style="width: 40%;" class="text-center">ALERTES</div>
                <div style="width: 15%;" class="text-center text-success">TRAITÉ</div>
                <div style="width: 10%;" class="text-end">COLIS</div>
              </div>

              <%= f.simple_fields_for :inventory_items, items do |item_form| %>
                <% product = item_form.object.product %>
                <div class="p-2 border-bottom d-flex align-items-center bg-white item-row transition-all">
                  <%= item_form.input :product_id, as: :hidden %>

                  <%# 1. INFO PRODUIT %>
                  <div style="width: 35%;" class="pe-1">
                    <div class="fw-bold lh-sm mb-1 text-dark" style="font-size: 0.75rem;"><%= product.name %></div>
                    <div class="text-muted font-monospace" style="font-size: 0.6rem;">PCB: <%= product.pcb %> | EAN: <%= product.ean.last(4) %></div>
                  </div>

                  <%# 2. ÉTATS (BADGES) %>
                  <div style="width: 40%;" class="d-flex justify-content-around align-items-center">
                    <%# Rupture %>
                    <div class="text-center">
                      <%= item_form.check_box :is_out_of_stock, class: "btn-check oos-check", id: "oos_#{item_form.index}" %>
                      <label class="badge border border-danger text-danger rounded-pill status-badge oos-label" for="oos_<%= item_form.index %>">RUPTURE</label>
                    </div>
                    <%# Manquant %>
                    <div class="text-center mx-1">
                      <%= item_form.check_box :no_shelf_space, class: "btn-check miss-check", id: "miss_#{item_form.index}" %>
                      <label class="badge border border-dark text-dark rounded-pill status-badge miss-label" for="miss_<%= item_form.index %>">MANQUANT</label>
                    </div>
                    <%# Étiquette %>
                    <div class="text-center">
                      <%= item_form.check_box :missing_label, class: "btn-check", id: "lab_#{item_form.index}" %>
                      <label class="badge border border-warning text-warning rounded-pill status-badge lab-label" for="lab_<%= item_form.index %>">ÉTIQ.</label>
                    </div>
                  </div>

                  <%# 3. CASE TRAITÉ %>
                  <div style="width: 15%;" class="text-center border-start border-end px-1">
                    <input type="checkbox" class="form-check-input border-success shadow-none resolve-check"
                           style="width: 1.2rem; height: 1.2rem;"
                           data-action="change->inventory-handler#resolve">
                  </div>

                  <%# 4. COLIS %>
                  <div style="width: 10%;" class="ps-1">
                    <%= item_form.input :cases_added, label: false,
                        input_html: {
                          class: "form-control form-control-sm p-1 text-center fw-bold border-0 bg-light shadow-none",
                          style: "font-size: 0.8rem;",
                          inputmode: "numeric",
                          placeholder: "-"
                        } %>
                  </div>
                </div>
              <% end %>

            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%# BOUTON VALIDER FIXE %>
    <div class="fixed-bottom bg-white border-top p-3 shadow-lg" style="z-index: 1050;">
      <div class="container p-0">
        <%= f.button :submit, "VALIDER LE RELEVÉ", class: "btn btn-primary btn-lg w-100 fw-bold py-3 shadow-sm rounded-3" %>
      </div>
    </div>
  <% end %>
</div>

<style>
  /* Badges interactifs */
  .status-badge {
    cursor: pointer;
    font-size: 0.55rem !important;
    padding: 4px 6px !important;
    min-width: 42px;
    background-color: transparent;
    transition: 0.1s;
  }

  /* Rupture : Rouge */
  .btn-check:checked + .oos-label {
    background-color: #dc3545 !important;
    color: white !important;
    border-color: #dc3545 !important;
  }

  /* Manquant : Noir */
  .btn-check:checked + .miss-label {
    background-color: #212529 !important;
    color: white !important;
    border-color: #212529 !important;
  }

  /* Etiquette : Jaune */
  .btn-check:checked + .lab-label {
    background-color: #ffc107 !important;
    color: #000 !important;
    border-color: #ffc107 !important;
  }

  /* État Traité : Opacité réduite */
  .row-resolved {
    opacity: 0.4;
    background-color: #f8fff9 !important;
    pointer-events: none; /* Empêche de modifier une ligne traitée */
  }
  .row-resolved .resolve-check {
    pointer-events: auto; /* Permet de décocher "Traité" */
  }

  .transition-all { transition: all 0.3s ease; }
</style>
